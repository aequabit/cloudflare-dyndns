{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "lib": ["esnext"],
        "locale": "en",
        "module": "commonjs",
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "outDir": "dist",
        "pretty": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "target": "es5"
    },
    "exclude": ["node_modules"]
}
